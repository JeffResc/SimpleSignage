<%- include('partials/header.ejs') %>
<div id="body" class="active">
	<nav class="navbar navbar-expand-lg navbar-primary bg-primary">
		<button type="button" id="sidebarCollapse" class="btn btn-outline-light default-light-menu"><i class="fas fa-bars"></i><span></span></button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="nav navbar-nav ml-auto">
				<li class="nav-item dropdown">
					<div class="nav-dropdown">
						<a href="" class="nav-item nav-link dropdown-toggle" data-toggle="dropdown"><i class="fas fa-user"></i> <span><%= username %></span></a>
					</div>
				</li>
			</ul>
		</div>
	</nav>

	<div class="content">
		<div class="container-fluid">
			<% if (typeof message !== 'undefined' && message) { %>
				<div class="row">
			    <div class="col-lg-12">
				    <div class="card">
							<div class="card-header">Message</div>
			        <div class="card-body"><p>Processing your request...</p></div>
				    </div>
					</div>
				</div>
			<% } %>
			<div class="row">
				<div class="col-md-6">
					<div class="card">
						<div class="card-header">Device Information</div>
						<div class="card-body">
						  <div class="table-responsive">
							<table class="table table-striped">
								<tbody>
								<tr>
									<th scope="row">Device UUID</th>
									<td><%= uuid %></td>
								</tr>
								<tr>
									<th scope="row">Device Type</th>
									<td><%= deviceType %></td>
								</tr>
								<tr>
									<th scope="row">App ID</th>
									<td><%= appId %></td>
								</tr>
								<tr>
									<th scope="row">App Name</th>
									<td><%= appName %></td>
								</tr>
								<tr>
									<th scope="row">Supervisor Version</th>
									<td><%= balenaSupervisorVersion %></td>
								</tr>
								<tr>
									<th scope="row">OS Version</th>
									<td><%= hostOSVersion %></td>
								</tr>
								</tbody>
							</table>
							</div>
						</div>
					</div>
					<div class="card">
							<div class="card-header">Actions</div>
							<div class="card-body">
									<p class="card-title">Use these buttons to control the device in realtime.</p>
									<form method="POST" action="/forms/dashboardActions">
										<button type="submit" name="stop" class="btn btn-icon icon-left btn-danger mb-2"><i class="fas fa-stop"></i> Stop Playing</button>
										<button type="submit" name="start" class="btn btn-icon icon-left btn-success mb-2"><i class="fas fa-play"></i> Start</button>
										<button type="submit" name="startContent" class="btn btn-icon icon-left btn-info mb-2"><i class="fas fa-play"></i> Start Content</button>
										<button type="submit" name="startScreensaver" class="btn btn-icon icon-left btn-info mb-2"><i class="fas fa-play"></i> Start Screensaver</button>
										<button type="submit" name="reboot" class="btn btn-icon icon-left btn-warning mb-2"><i class="fas fa-circle-notch"></i> Reboot Device</button>
									</form>
							</div>
					</div>
					<div class="card">
							<div class="card-header">Live View</div>
							<div class="card-body">
									<p class="card-title">
										View the screen in close to realtime.
									</p>
									<div id="liveView">
										<img src="/view.png" width="100%" height="100%" />
									</div>
							</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="card">
						<div class="card-header">Set Screen Hours</div>
						<div class="card-body">
						<p class="card-title">Screens will turn on one hour prior to open as well as stay on one hour after close to display your splashscreen/screensaver.</p>
						<form method="POST" action="/forms/postHours">
							  <div class="table-responsive">
								<table class="table table-striped">
									<tbody>
									<tr>
										<th scope="row">Sunday</th>
										<td>Open: <input id="sundayOpen" name="0open" value="<%= hours[0].open %>" class="fieldset__input js__timepicker picker__input" type="text" placeholder="Sunday Open Time" readonly="" aria-haspopup="true" aria-expanded="true" aria-readonly="false"><br>Close: <input id="sundayClose" name="0close" value="<%= hours[0].close %>" class="fieldset__input js__timepicker picker__input" type="text" placeholder="Sunday Close Time" readonly="" aria-haspopup="true" aria-expanded="true" aria-readonly="false"></td>
									</tr>
									<tr>
										<th scope="row">Monday</th>
										<td>Open: <input id="mondayOpen" name="1open" value="<%= hours[1].open %>" class="fieldset__input js__timepicker picker__input" type="text" placeholder="Monday Open Time" readonly="" aria-haspopup="true" aria-expanded="true" aria-readonly="false"><br>Close: <input id="mondayClose" name="1close" value="<%= hours[1].close %>" class="fieldset__input js__timepicker picker__input" type="text" placeholder="Monday Close Time" readonly="" aria-haspopup="true" aria-expanded="true" aria-readonly="false"></td>
									</tr>
									<tr>
										<th scope="row">Tuesday</th>
										<td>Open: <input id="tuesdayOpen" name="2open" value="<%= hours[2].open %>" class="fieldset__input js__timepicker picker__input" type="text" placeholder="Tuesday Open Time" readonly="" aria-haspopup="true" aria-expanded="true" aria-readonly="false"><br>Close: <input id="tuesdayClose" name="2close" value="<%= hours[2].close %>" class="fieldset__input js__timepicker picker__input" type="text" placeholder="Tuesday Close Time" readonly="" aria-haspopup="true" aria-expanded="true" aria-readonly="false"></td>
									</tr>
									<tr>
										<th scope="row">Wednesday</th>
										<td>Open: <input id="wednesdayOpen" name="3open" value="<%= hours[3].open %>" class="fieldset__input js__timepicker picker__input" type="text" placeholder="Wednesday Open Time" readonly="" aria-haspopup="true" aria-expanded="true" aria-readonly="false"><br>Close: <input id="wednesdayClose" name="3close" value="<%= hours[3].close %>" class="fieldset__input js__timepicker picker__input" type="text" placeholder="Wednesday Close Time" readonly="" aria-haspopup="true" aria-expanded="true" aria-readonly="false"></td>
									</tr>
									<tr>
										<th scope="row">Thursday</th>
										<td>Open: <input id="thursdayOpen" name="4open" value="<%= hours[4].open %>" class="fieldset__input js__timepicker picker__input" type="text" placeholder="Thursday Open Time" readonly="" aria-haspopup="true" aria-expanded="true" aria-readonly="false"><br>Close: <input id="thursdayClose" name="4close" value="<%= hours[4].close %>" class="fieldset__input js__timepicker picker__input" type="text" placeholder="Thursday Close Time" readonly="" aria-haspopup="true" aria-expanded="true" aria-readonly="false"></td>
									</tr>
									<tr>
										<th scope="row">Friday</th>
										<td>Open: <input id="fridayOpen" name="5open" value="<%= hours[5].open %>" class="fieldset__input js__timepicker picker__input" type="text" placeholder="Friday Open Time" readonly="" aria-haspopup="true" aria-expanded="true" aria-readonly="false"><br>Close: <input id="fridayClose" name="5close" value="<%= hours[5].close %>" class="fieldset__input js__timepicker picker__input" type="text" placeholder="Friday Close Time" readonly="" aria-haspopup="true" aria-expanded="true" aria-readonly="false"></td>
									</tr>
									<tr>
										<th scope="row">Saturday</th>
										<td>Open: <input id="saturdayOpen" name="6open" value="<%= hours[6].open %>" class="fieldset__input js__timepicker picker__input" type="text" placeholder="Saturday Open Time" readonly="" aria-haspopup="true" aria-expanded="true" aria-readonly="false"><br>Close: <input id="saturdayClose" name="6close" value="<%= hours[6].close %>" class="fieldset__input js__timepicker picker__input" type="text" placeholder="Saturday Close Time" readonly="" aria-haspopup="true" aria-expanded="true" aria-readonly="false"></td>
									</tr>
									</tbody>
								</table>
								<div class="form-check">
									<input class="form-check-input" checked="checked" type="checkbox" name="sync">
									<label class="form-check-label" for="sync">Sync across all screens at this location</label>
								</div>
								<button type="submit" class="btn btn-primary"><svg class="svg-inline--fa fa-save fa-w-14" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="save" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" data-fa-i2svg=""><path fill="currentColor" d="M433.941 129.941l-83.882-83.882A48 48 0 0 0 316.118 32H48C21.49 32 0 53.49 0 80v352c0 26.51 21.49 48 48 48h352c26.51 0 48-21.49 48-48V163.882a48 48 0 0 0-14.059-33.941zM224 416c-35.346 0-64-28.654-64-64 0-35.346 28.654-64 64-64s64 28.654 64 64c0 35.346-28.654 64-64 64zm96-304.52V212c0 6.627-5.373 12-12 12H76c-6.627 0-12-5.373-12-12V108c0-6.627 5.373-12 12-12h228.52c3.183 0 6.235 1.264 8.485 3.515l3.48 3.48A11.996 11.996 0 0 1 320 111.48z"></path></svg><!-- <i class="fas fa-save"></i> --> Save</button>
								</div>
							</form>
						</div>
					</div>
					<div class="card">
							<div class="card-header">Content Uploader</div>
							<div class="card-body">
									<p class="card-title">
										Upload a new contentfile or screensaver.
									</p>
									<div>
										<table class="table table-striped">
											<tbody>
												<tr>
													<th scope="row">Select video to upload as content:</th>
													<td><form action="/upload/content" method="post" enctype="multipart/form-data"><input type="file" name="contentFile" id="contentFile" accept="video/mp4"><input type="submit" value="Upload Content" name="submit"></form></td>
												</tr>
												<tr>
													<th scope="row">Select video to upload as screensaver:</th>
													<td><form action="/upload/screensaver" method="post" enctype="multipart/form-data"><input type="file" name="screensaverFile" id="screensaverFile" accept="video/mp4"><input type="submit" value="Upload Screensaver" name="submit"></form></td>
												</tr>
											</tbody>
										</table>
										</div>
									</div>
							</div>
					</div>
				</div>
			</div>
			<p>&copy; 2020<script>new Date().getFullYear()>2020&&document.write("-"+new Date().getFullYear());</script>, <a href="https://jeffresc.dev">Jeffrey Rescignano</a>.</p>
		</div>
	</div>
</div>
<%- include('partials/footer.ejs') %>
